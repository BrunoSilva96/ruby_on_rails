<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
  <h1><%= t('editing.coin') %></h1>
  <form>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_field :description, class: "form-control", placeholder: "Bitcoin" %>
    </div>

    <div class="form-group">
      <%= form.label :acronym %>
      <%= form.text_field :acronym, class: "form-control", placeholder: "BTC" %>
    </div>

    <div class="form-group">
      <%= form.label :url_image %>
      <%= form.text_field :url_image, class: "form-control",placeholder: "https://bitcoin.png" %>
    </div>

    <div class="form-group">
      <%= form.label :mining_type_id %>
      <%= form.select("mining_type_id", @mining_type_options, { include_blank: t('new.select') }, 
      class: "form-select" ) %>
    </div>

    <%= form.submit nil, class:"btn btn-success mt-2 mb-2" %>
  </form>
<% end %>
