<p style="color: green"><%= notice %></p>

<div class="container">
<h1 class="font-weight-boldb my-4"><%= Coin.model_name.human(count: @coins.count) %></h1>
  <table class="table table-hover">
    <thead class="thead-light">
        <th scope="col"><strong><%=@coins.human_attribute_name(:description)%></strong></th>
        <th scope="col"><strong><%=@coins.human_attribute_name(:acronym)%></strong></th>
        <th scope="col"><strong><%=@coins.human_attribute_name(:image)%></strong></th>
        <th scope="col"><strong>Mostrar</strong></th>
        <th scope="col"><strong>Editar</strong></th>
      <tr>
      </tr>
    </thead>
    <tbody>
        <% @coins.each do |coin| %>
          <tr>
            <td><%= coin.description %></td>
            <td><%= coin.acronym %></td>
            <td><%= image_tag coin.url_image, size: "25x25" %></td>
            <td><%= link_to t('links.show'), coin, class:"btn btn-info" %></td>
            <td><%= link_to t('links.edit'), edit_coin_path(coin), class:"btn btn-success" %></td>          
            <%#/coins/:id(.:format)%>
          </tr>
        <% end %>
      </tbody>
  </table>

<%= link_to t('new.coin'), new_coin_path, class:"btn btn-dark" %>
</div>